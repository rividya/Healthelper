<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundhome"
    tools:context=".DetailBooking">

    <TextView
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="170dp"
        android:text="Booking Confirmed"
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        android:textStyle="bold"/>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/whitewstroke1"/>
    
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/whitewstroke1"/>
    
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="70dp"
        android:src="@drawable/doctor1"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Dr. James Hadi"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="320dp"/>

    <TableRow
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="65dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Name"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="430dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Charles"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="430dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Package"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="480dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="A"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="480dp"/>

    <Button
        android:id="@+id/button_done_detail_booking"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/purple"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="600dp"
        android:text="Done"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"/>


</RelativeLayout>